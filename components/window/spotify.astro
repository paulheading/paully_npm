---
import WindowOuter from "#components/window/outer";
import WindowInner from "#components/window/inner";
import Header from "#components/window/spotify/header";
import Main from "#components/window/spotify/main";

let { settings, content } = Astro.props;

let { url, owner, name, tracks } = content;

let outerProps = {
  className: "outer",
  settings,
};

let headerProps = {
  url,
  owner,
  name,
};

let mainProps = {
  tracks,
};
---

<WindowOuter {...outerProps}>
  <WindowInner className="inner">
    <header>
      <slot />
      <Header {...headerProps} />
    </header>
    <Main {...mainProps} />
  </WindowInner>
</WindowOuter>

<style lang="scss">
  @use "#mixins" as *;

  .outer {
    left: toRem(64);
    top: toRem(32);
  }

  .inner {
    background-color: black;
    color: white;
  }

  header {
    grid-template-columns: toRem(80) toRem(176);
    background-color: #222b1b;
    display: grid;
  }
</style>
