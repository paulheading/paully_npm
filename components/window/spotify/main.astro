---
import Track from "#components/window/spotify/track";

let { tracks } = Astro.props;
---

<main>
  {
    tracks.map(function (track, index) {
      let { name, url, artist } = track;
      let props = {
        number: index + 1,
        artist,
        name,
        url,
      };
      return <Track {...props} />;
    })
  }
</main>

<style lang="scss">
  @use "#mixins" as *;

  main {
    max-height: $width-window;
    overflow: scroll;
    padding: 0.75rem;
  }
</style>
