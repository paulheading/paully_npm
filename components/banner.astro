---
import { mapObjectToProps } from "#helpers";

let { style, className, data } = Astro.props;

let props = {
  "class:list": ["banner-container", className],
  style,
};

props = mapObjectToProps({ data, props });
---

<div {...props}>
  <slot />
</div>

<style lang="scss">
  .banner-container {
    background-color: black;
    justify-content: center;
    text-align: center;
    color: white;
    padding: 1rem;
  }
</style>
